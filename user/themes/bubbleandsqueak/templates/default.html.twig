{% extends 'partials/base.html.twig' %}
{% set image = page.media.images|first %}
{% block content %}
	{% include 'partials/hero.html.twig' %}
	<main id="maincontent" tabindex="-1" role="main" itemscope itemprop="mainContentOfPage" itemtype="http://schema.org/WebPageElement">
	    <div class="wrapper">
			<div class="grid-container inner">
				<div class="grid-x grid-margin-x">
					{% if header.body_image %}
						<div class="cell medium-6">
							{% set color = GetImageColor(page.media[header.body_image].path())[0] %}
                    		<img class="lazy" style="background-color: #{{ color }}" data-src="{{ page.media[header.body_image].url }}" alt="{{ feature.header }}" width="{{ page.media[header.body_image].width }}" height="{{ page.media[header.body_image].height }}">
						</div>
						<div class="cell medium-6">
							{{ page.content|raw }}
						</div>
					{% else %}
						<div class="cell small-12">
		                    {{ page.content|raw }}
		                </div>
		             {% endif %}
				</div>
			</div>
	    </div>
	</main>
{% endblock %}